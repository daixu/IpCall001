<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pinned_header_list_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

	<ListView android:id="@android:id/list" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:fastScrollEnabled="true" 
    	android:focusable="true" />

	<TextView android:id="@android:id/empty" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:text="@string/contact_empty"
		android:gravity="center" android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>
